<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="fr.ece.controller.DashboardController"
            prefHeight="700.0" prefWidth="1200.0"
            stylesheets="@../css/styles.css"
            styleClass="root">

    <!-- Top Menu Bar -->
    <top>
        <VBox>
            <MenuBar styleClass="menu-bar">
                <Menu text="Profil">
                    <MenuItem text="Déconnexion" onAction="#handleLogout"/>
                </Menu>
            </MenuBar>

            <!-- Header Bar -->
            <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-bar">
                <padding>
                    <Insets top="15" right="20" bottom="15" left="20"/>
                </padding>

                <Label fx:id="welcomeLabel" text="Bienvenue" styleClass="page-title"/>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- Boutons d'administration (visibilité contrôlée par le controller) -->
                <Button fx:id="manageCategoriesButton"
                        text="Gérer les catégories"
                        onAction="#handleManageCategories"
                        styleClass="secondary-button"/>
                <Button fx:id="manageUsersButton"
                        text="Gérer les utilisateurs"
                        onAction="#handleManageUsers"
                        styleClass="secondary-button"/>
            </HBox>
        </VBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Statistics Cards -->
            <HBox spacing="20" alignment="CENTER">
                <!-- Total Tasks Card -->
                <VBox styleClass="stat-card" spacing="10" alignment="CENTER"
                      HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                    <Text text="Total Tâches" styleClass="stat-label"/>
                    <Label fx:id="totalTasksLabel" text="0" styleClass="stat-value"/>
                </VBox>

                <!-- TODO Tasks Card -->
                <VBox styleClass="stat-card-warning" spacing="10" alignment="CENTER"
                      HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                    <Text text="À faire" styleClass="stat-label"/>
                    <Label fx:id="todoCountLabel" text="0" styleClass="stat-value"/>
                </VBox>

                <!-- In Progress Tasks Card -->
                <VBox styleClass="stat-card-info" spacing="10" alignment="CENTER"
                      HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                    <Text text="En cours" styleClass="stat-label"/>
                    <Label fx:id="inProgressCountLabel" text="0" styleClass="stat-value"/>
                </VBox>

                <!-- Completed Tasks Card -->
                <VBox styleClass="stat-card-success" spacing="10" alignment="CENTER"
                      HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                    <Text text="Terminées" styleClass="stat-label"/>
                    <Label fx:id="doneCountLabel" text="0" styleClass="stat-value"/>
                </VBox>
            </HBox>

            <!-- Filters Section -->
            <VBox spacing="10" styleClass="filter-section">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <!-- Search and Filters Row 1 -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Recherche:" styleClass="filter-label"/>
                    <TextField fx:id="searchField"
                               promptText="Rechercher une tâche..."
                               prefWidth="250"/>

                    <Label text="Statut:" styleClass="filter-label">
                        <HBox.margin>
                            <Insets left="20"/>
                        </HBox.margin>
                    </Label>
                    <ComboBox fx:id="statusFilterCombo" prefWidth="150"/>

                    <Label text="Priorité:" styleClass="filter-label">
                        <HBox.margin>
                            <Insets left="20"/>
                        </HBox.margin>
                    </Label>
                    <ComboBox fx:id="priorityFilterCombo" prefWidth="150"/>

                    <Label text="Utilisateur:" fx:id="userFilterLabel" />
                    <ComboBox fx:id="userFilterCombo" prefWidth="150"/>
                </HBox>

                <!-- Filters Row 2 -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Catégorie:" styleClass="filter-label"/>
                    <ComboBox fx:id="categoryFilterCombo" prefWidth="200"/>

                    <CheckBox fx:id="overdueCheckBox"
                              text="Afficher uniquement les tâches en retard">
                        <HBox.margin>
                            <Insets left="20"/>
                        </HBox.margin>
                    </CheckBox>

                    <Region HBox.hgrow="ALWAYS"/>

                    <Button fx:id="clearFiltersButton"
                            text="Effacer les filtres"
                            onAction="#clearFilters"
                            styleClass="secondary-button"/>
                </HBox>
            </VBox>

            <!-- Tasks Section -->
            <VBox spacing="15" VBox.vgrow="ALWAYS">
                <!-- Section Header -->
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <Text text="Mes Tâches" styleClass="section-title"/>
                    <Region HBox.hgrow="ALWAYS"/>

                    <!-- Action Buttons -->
                    <Button text="+ Nouvelle Tâche"
                            onAction="#handleAddTask"
                            styleClass="primary-button"/>
                    <Button text="Modifier"
                            onAction="#handleEditTask"
                            styleClass="secondary-button"/>
                    <Button text="Supprimer"
                            onAction="#handleDeleteTask"
                            styleClass="delete-button"/>
                </HBox>

                <!-- Tasks Table -->
                <TableView fx:id="taskTableView" VBox.vgrow="ALWAYS" styleClass="table-view">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                        <TableColumn fx:id="titleColumn" text="Titre" prefWidth="250"/>
                        <TableColumn fx:id="statusColumn" text="Statut" prefWidth="120"/>
                        <TableColumn fx:id="priorityColumn" text="Priorité" prefWidth="100"/>
                        <TableColumn fx:id="dueDateColumn" text="Date Limite" prefWidth="100"/>
                        <TableColumn fx:id="ownerColumn" text="Assignée à" prefWidth="100"/>
                        <TableColumn fx:id="categoryColumn" text="Catégorie" prefWidth="150"/>
                    </columns>
                    <placeholder>
                        <Label text="Aucune tâche disponible" styleClass="placeholder-label"/>
                    </placeholder>
                </TableView>
            </VBox>
        </VBox>
    </center>

    <!-- Bottom Status Bar -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="status-bar">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            <Label text="Prêt" styleClass="status-text"/>
        </HBox>
    </bottom>
</BorderPane>